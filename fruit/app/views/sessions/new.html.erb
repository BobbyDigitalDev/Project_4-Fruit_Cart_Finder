


<% if @message %>
  <h3> <%= @message %> </h3>
<% end %>
<center>
<h2>Welcome Fruit finder! <br> Please sign in below.</h2>
  <div class="formCenter">

    <%= form_tag "/sessions" do%>
      <%= label_tag :email %>
      <%= email_field_tag :email %><br><br>
      <%= label_tag :password %>
      <%= password_field_tag :password %><br><br>
      <%= submit_tag "Log in"%>
    <% end %>

  </div>
</center>
